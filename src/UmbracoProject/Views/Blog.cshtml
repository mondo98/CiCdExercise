@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<ContentModels.Blog>
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@{
	Layout = "Master.cshtml";
	string cssCurrent = "nav-current";
}
<div class="jumbotron jumbotron-small jumbotron-single d-flex align-items-center">
  <div class="container text-center">
    <h1 class="display-2 mb-4">@Model.Name</h1>
  </div>
</div>

<section id="single-content" class="bg-white">
    <div class="container">
        <div class="section-content blog-content">

            <div class="row">
    <div class="col-md-8 offset-md-2 mt-4">
        @Model.Summary
            <hr />
            @Model.BodyText
    </div>
                <div class="col-md-2 mt-4 align-self-start">
                    You might also like:
                    <ul class="side-nav">
                        @foreach (var child in Model.Siblings())
                        {
                            <li>
                                @if (Model.Name == child.Name)
                                {
                                    <a class="@cssCurrent" href="@child.Url()">@child.Name</a>
                                }
                                else
                                {
                                    <a href="@child.Url()">@child.Name</a>
                                }

                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="bg-fixed overlay">
    <div class="container">
        <div class="section-content">
            <div class="row">
                <div class="col-md-12 text-center">
                    <h2 class="mb-2"></h2>
                </div>
            </div>
        </div>
    </div>
</section>
